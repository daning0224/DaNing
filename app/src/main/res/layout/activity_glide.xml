<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bawei.daning.Glide.activity.GlideActivity">

    <include layout="@layout/titlebar" />

    <Button
        android:id="@+id/btn_glide_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="基本方法的使用" />

    <Button
        android:id="@+id/btn_glide_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RecyclerView加载图片" />

    <Button
        android:id="@+id/btn_glide_tranfromations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="图片变换" />


</LinearLayout>
